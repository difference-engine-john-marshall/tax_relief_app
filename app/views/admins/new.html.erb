<div class="container-fluid">
  <% if @admin.errors.any? %>
   <div class="alert alert-warning alert-dismissible" role="alert" id="error_explanation">
     <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
     <p><b><%= pluralize(@admin.errors.count, "error") %> prohibited this admin from being saved:</b></p>

     <ul>
     <% @admin.errors.full_messages.each do |msg| %>
       <li><%= msg %></li>
     <% end %>
     </ul>
   </div>
  <% end %>
</div>
<%= form_tag '/dashboard/admins/create', method: :post do %>
<div class="container-fluid">
  <div class="row" id="new-title">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" id="question-text">
      <div class="panel panel-default" id="question-text-panel">
        <div class="panel-heading" id="question-text-panel-heading">
          <h3 class="panel-title">Create New Admin</h3>
        </div>
        <%= form_tag '/dashboard/admins/create' do %>
          <br>
          <%= text_field_tag :email, nil, placeholder: 'Enter email address...' %>
          <br>
          <br>
          <%= submit_tag "Create Admin", class: "button-submit btn-lg", id: "button-submit" %>

        <% end %>
      </div>
    </div>
  </div>
<% end %>
