<div class="container-fluid">
  <div id="navbar-panel">
    <a href="/questions_index/new" class="btn btn-default index-button" role="button">Create Question</a>
    <a href="/faq/new" class="btn btn-default index-button" role="button">Create FAQ</a>
    <a href="/admins/new" class="btn btn-default index-button" role="button">Create Admin</a>
  </div>

<% @questions.each do |question| %>

  <div class="row" id="new-title">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" id="question-text">
      <div class="panel panel-default" id="question-text-panel">
        <div class="panel-heading" id="question-text-panel-heading">
          <h3 class="panel-title">Question Text</h3>
        </div>
        <div class="panel-body" id="question-text-body">
            
            <%= raw question.text %>
        </div>
        <div class="question-response-field">
          <%= label_tag :yes_response %>:
          <%= question.yes_response %> &nbsp;
          <%= label_tag :no_response %>:
          <%= question.no_response %>
        </div>
        <a href="/questions_index/<%= question.id %>/edit" class="btn btn-default" id="button-edit" role="button">Edit Question</a>
        <a href="/questions_index/<%= question.id %>/" class="btn btn-default" role="button" id="button-delete" data-method="delete">Delete Question</a>
      </div>
    </div>
  </div>
<% end %>
</div>

